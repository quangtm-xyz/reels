@model IEnumerable<FaqItem>

<div class="space-y-6">
@foreach (var faq in Model)
{
    <article class="rounded-lg border border-gray-100 bg-white p-4 shadow-sm transition hover:border-blue-100 hover:shadow-md">
        <h3 class="text-lg font-semibold text-black mb-2">@faq.Question</h3>
        <p class="text-base text-gray-700">@faq.Answer</p>
    </article>
}
</div>



